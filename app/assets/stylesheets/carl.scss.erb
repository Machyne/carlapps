$theme: #ff7f7f;

// ------- // GENERAL // ------- //
a {
    text-decoration: none;
    color: inherit;
}
p {
    font-family: Helvetica, sans-serif;
    font-weight: lighter;
    font-size: 0.875rem; // 14px
    line-height: 1.25rem;
    margin-bottom: 1.25rem;
}
*::selection {
    background-color: lighten($theme, 12.5%);
}

// ------- // TOOLTIP // ------- //
#tooltip {
    display: block;
    position: absolute;
    padding: .2em;
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(127, 127, 127, 0.95);
    p {
        margin: .4em;
        font: .6em Helvetica, sans-serif;
        font-color: #4c4c4c;
    }
}

// ------- // SCROLL TO TOP // ------- //
#scroll-to-top, #scroll-to-top-active {
    display: block;
    position: fixed;
    top: 1.5rem;
    right: 1.5rem;
    width: 4rem;
    height: 4rem;
    background-color: #aaa;
    font: italic bold Nanami;
    @include vendor(border-radius, 1rem);

    &:hover {
        opacity: .6;
    }
}
#scroll-to-top {
    display: none;
    z-index: 990;
    opacity: .3;
    cursor: pointer;
    background: no-repeat url('<%= asset_path("up.png") %>');
}
#scroll-to-top-active {
    display: none;
    z-index: 991;
    opacity: .8;
    background: no-repeat url('<%= asset_path("up-red.png") %>');
}

// ------- // BODY AND CONTAINER // ------- //
body {
    border-left: .1875rem solid $theme;
    padding: 3rem 0;
    height: 100%;
}
.container {

    // Margins
    max-width: 0.90*$lap-end;
    @include media-query(palm) {
        margin: 0 1rem;
    }
    @include media-query(lap-and-up) {
        margin: 0 auto;
        width: 90%;
    }

    font-family: Nanami;
    color: #262626;
}
.content {
    margin-right: 0.5rem;
}

// ------- // SEARCH // ------- //
#search-hidden{
    text-align: right;
    #show-search-form {
        cursor: pointer; 
    }
}

#search-shown{
    display: table;
    border-collapse: separate;
    border-spacing: 10px 5px;
    .search-form-row{
        display: table-row;
        span{
            display: table-cell;
            margin-right: 10px;
            text-align: right;
        }
        a{
            cursor: pointer;
            font-style: italic;
        }
        span.cell-left{
            text-align: left;
        }
        span.cell-mid{
            text-align: center;
        }
        input{
            display: table-cell;
        }
    }
    .search-input-span{
        position: relative;
        a{
            cursor: pointer;
            position: absolute;
            z-index: 1;
            font-style: normal;
            right: 5px;
            top: 0px;
        }
        input{
            cursor: text;
            padding-right: 10px;
        }
    }
}

// ------- // DATE PICKER // ------- //
.nav-bar {
    display: block;
    height: 6.5rem;

    div {
        float: left;
    }

    .left, .right {
        width: 5%;

        a{
            display: inline-block;
            width: 20px;
            height: 36px;
            position: relative;
            top: 2.1rem;
            opacity: 0.5;
            @include vendor(transition, opacity .4s ease);

            &:hover, &:focus {
                opacity: 1.0;
            }
        }
    }

    .left {
        text-align: left;

        a {
            background: url('<%= asset_path("arrow2.png") %>') no-repeat;
        }
    }

    .right {
        text-align: right;

        a {
            background: 0 -72px url('<%= asset_path("arrow2.png") %>') no-repeat;
        }
    }

    .middle {
        width: 90%;
        height: 1rem;
        margin: 1rem 0;
        text-align: center;
    }

    input {
        text-align: center;
    }
}
#title {
    display: inline-block;
    background: white;
    height: 1rem;
    line-height: 1rem;
    font-family: Nanami;
    font-style: italic;
    letter-spacing: .2rem;
    text-align: center;
    margin: 0;
    @include vendor(transition, color .4s ease);

    &:hover, &:focus {
        color: $theme;
    }
}
#date-input, #date-input * {
    z-index: -1;
    height: 0;
    padding: 0;
    margin: 0;
    position: relative;
    bottom: .7rem;
}

// ------- // SECTIONS NAV // ------- //
nav {
    display: block;
    height: 3rem;
    min-height: 3rem;
    margin: 0.5rem 0;

    ul {
        display: block;
        list-style: none;
        height: 1rem;
        line-height: 1rem;
        padding: 0;
        margin: 0;
        text-align: center;
        margin-bottom: 0.25rem;
   }

    li {
        display: inline-block;
        height: 1rem;
        line-height: 1rem;
        padding: 0 0.5rem;
    }

    p {
        margin: 0;
        line-height: 1rem;
    }

    a {
        font-family: Nanami;
        font-weight: lighter;
        text-transform: lowercase;
        font-style: italic;
        font-size: .75rem;
        color: #444;
        @include vendor(transition, color .4s ease);

        &:hover, &:focus {
            color: $theme;
        }
    }
}

// ------- // CONTENT // ------- //
.content p {
    color: #444;

 // Don't add :link, it seems to make the anchors miss some of their styling
    a {
        display: inline-block;
        vertical-align: top;
        height: 1.25em;
        border-bottom: .1em solid $theme;
        @include vendor(transition, color .5s ease, border-width .3s ease);

        &:hover, &:focus {
            color: #fff;
            border-width: 1.25em;
        }
    }
}

// ------- // HEADING // ------- //
h1 {
    font-weight: 100;
    font-size: 3.25rem;
    line-height: 3.25rem;
    margin-left: -.06em;
    margin-bottom: 1.25rem;

    #carlapps {
        @include media-query(palm) { display: none; }
        margin-right: .85em;
        color: #a9a9a9;
        @include vendor(transition, color 0.4s ease);

        &:hover {
            color: #000;
        }
    }
    #app_name {
        display: inline-block;
        color: #262626;
        @include vendor(transition, color 0.4s ease);
        @include media-query(palm) { padding-left: .3em; }

        span {
            display: inline-block;
            width: 0px;

            span {
                z-index: -1;
                display: inline-block;
                position: relative;
                width: 100%;
                left: -.23em;
                top: 0em;
                border-left: solid $theme;
                height: .8em;
                border-width: .2em;
                @include vendor(transition, border-width 0.4s ease);
            }
        }

        &:hover {
            color: #fff;
            
            span span {
                border-width: 4.5em;
            }
        }
    }
}

// ------- // COLLAPSE EFFECT // ------- //
.fader, .barground {
    height: 0;

    div {
        top: -3.5em;
        position: relative;
        height: 100%;
        border-left: solid 0;
        border-right: solid 0;
        border-top: solid 1.75rem;
        border-bottom: solid 1.75rem;
        border-color: rgba(255, 255, 255, 1);
    }
}
.section.selected .fader div {
    border-color: rgba(255, 255, 255, 0);
}
.fader div {
    z-index: -1;
    @include vendor(transition, border-color .4s ease);
}
.barground div {
    z-index: -2;
    @include vendor(border-image, url('<%= asset_path("barground7.png") %>') 56 0 repeat space);
    // border-image-outset: 0 4rem 0 3rem;
}

// ------- // SECTIONS // ------- //
hr.rule {
    margin-bottom: 0;
}
.section {

    h2 {
        cursor: pointer;
        text-transform: uppercase;
        color: #131313;
        margin-left: -.03em;
        margin-bottom: 0rem;
        padding-top: 1.5rem;
        @include vendor(transition, padding-top 0.4s ease, color 0.4s ease);

        &:hover {
            color: rgba(140, 140, 140, 1);
        }
    }

    &.selected h2 {
        padding-top: 0.5rem;
        color: rgba(140, 140, 140, 0.75);
    }
}
.section .content {
    padding-top: 1rem;
    padding-bottom: 1rem;
}

// ------- // DETAILS // ------- //
.first {
    font-weight: normal;
    color: #555;
}
.date {
    display: inline-block;
}