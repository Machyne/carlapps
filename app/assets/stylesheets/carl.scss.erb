@import "inuit.css/inuit";
//

$baseline: 0.785714rem;
$theme: #ff7f7f;

// ------- // NORMALIZATION // ------- //
a{
    text-decoration: none;
    color: inherit;
    &:hover, &:focus{
        text-decoration: none;
    }
}


// ------- // TOOLTIP // ------- //
#tooltip {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(127, 127, 127, 0.95);
    display: block;
    padding: .2em;
    position: absolute;
    p {
        margin: .4em;
        font: .6em Helvetica, sans-serif;
        font-color: #4c4c4c;
    }
}

// ------- // BODY AND CONTAINER // ------- //
body {
    /* background: url('../img/grid.png'); */
    border-left: .1875rem solid $theme;
    padding-top: 3rem;
    height: 100%;
}
.container {

    // Margins
    max-width: 0.85*$lap-end;
    @include media-query(palm) {
        margin: 0 1rem;
    }
    @include media-query(lap-and-up) {
        margin: 0 auto;
        width: 85%;
    }

    font-family: Nanami;
    color: #262626;
}
.content {
    margin-right: 0.5rem;
}

// ------- // CONTENT // ------- //
.content p {
    font-family: OpenSans;
    font-weight: regular;
    color: #444;
    font-size: 0.875em; // 14px
    line-height: 1.25rem;
    margin-bottom: 1.25rem;

    a {
        display: inline-block;
        vertical-align: top;
        height: 1.25em;
        border-bottom: .1em solid $theme;
        transition: color .5s ease, border-width .3s ease;

        &:hover {
            color: #fff;
            border-width: 1.25em;
        }
    }
}

// ------- // TITLE // ------- //
h1 {
    cursor: pointer;
    font-weight: 100;
    font-size: 3.25rem;
    line-height: 3.25rem;
    margin-left: -.06em;
    margin-bottom: 1.25rem;
    margin-top: .4rem;

    #carlapps {
        @include media-query(palm) { display: none; }
        margin-right: .85em;
        color: #a9a9a9;
        transition: color 0.4s ease;

        &:hover {
            color: #000;
        }
    }
    #app_name {
        display: inline-block;
        color: #262626;
        transition: color 0.4s ease;
        @include media-query(palm) { padding-left: .3em; }

        span {
            display: inline-block;
            width: 0px;

            span {
                z-index: -1;
                display: inline-block;
                position: relative;
                width: 100%;
                left: -.23em;
                top: 0em;
                border-left: solid $theme;
                height: .8em;
                border-width: .2em;
                transition: border-width 0.4s ease;
            }
        }

        &:hover {
            color: #fff;
            
            span span {
                border-width: 4.5em;
            }
        }
    }
}

// ------- // COLLAPSE EFFECT // ------- //
.fader, .barground {
    height: 0;

    div {
        top: -3.5em;
        position: relative;
        height: 100%;
        border-left: solid 0;
        border-right: solid 0;
        border-top: solid 1.75rem;
        border-bottom: solid 1.75rem;
        border-color: rgba(255, 255, 255, 1);
    }
}
.section.selected .fader div {
    border-color: rgba(255, 255, 255, 0);
}
.fader div {
    z-index: -1;
    transition: border-color .4s ease;
}
.barground div {
    z-index: -2;
    border-image: url('<%= asset_path("barground7.png") %>') 56 0 repeat space;
    // border-image-outset: 0 4rem 0 3rem;
}

// ------- // SECTIONS // ------- //
hr.rule {
    margin-bottom: 0;
}
.section {

    h2 {
        cursor: pointer;
        text-transform: uppercase;
        color: #131313;
        margin-left: -.03em;
        margin-bottom: 0rem;
        padding-top: 1.5rem;
        transition: padding-top 0.4s ease, color 0.4s ease;

        &:hover {
            color: rgba(140, 140, 140, 1);
        }
    }

    &.selected h2 {
        padding-top: 0.5rem;
        color: rgba(140, 140, 140, 0.75);
    }
}
.section .content {
    padding-top: 1rem;
    padding-bottom: 1rem;
}

// ------- // DETAILS // ------- //
.first {
    font-weight: normal;
    color: #777;
}
.date {
    display: inline-block;
}